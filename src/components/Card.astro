---
interface Props {
	title: string;
	img: string;
	href: string;
}

const { href, title, img } = Astro.props;
---
<article  class="snap-start relative flex flex-col z-10 max-w-76 gap-2 px-3 py-3 bg-red-600 backdrop-blur-md shadow-lg rounded-[20px] md:rounded-[30px] bg-gradient-to-b from-white/10 to-white/0" >
    <div class="flex -mt-8 gap-2 justify-center ">
        <img class="rounded-[20px] md:rounded-[30px] shadow-4xl h-56 xl:h-72 w-56 xl:w-72" src={img} alt="Side Image" />
    </div>
    <h2 class="text-2xl mt-3 font-bold text-white">
        {title}
    </h2>
    <div class="grid grid-cols-2 items-center gap-1">
        <div class="flex flex-row gap-2 justify-start items-center">
            <img class="rounded-[20px] md:rounded-[30px] shadow-lg h-10 w-10 md:h-16 md:w-16" src={img} alt="Side Image" />
            <h2 class="text-base xl:text-lg text-white">
                View
                <span>&rarr;</span>
            </h2>
            
        </div>
        <div class="flex flex-wrap justify-end items-center">
            <a href="#" class="bg-gray-600 bg-opacity-90 w-10 h-full md:h-10 justify-items-center text-white rounded-lg p-2 hover:-translate-y-1 hover:delay-150 hover:scale-110 hover:bg-[#6d2b25]">
                <p>+</p>
            </a>
        </div>
    </div>
</article >