---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <section class="flex flex-col md:flex-row items-center justify-center min-h-screen bg-white text-gray-800 px-6 py-16">

        <!-- Left Side - Service Cards -->
        <div class="bg-gray-50 p-10 md:w-1/2 grid gap-6 rounded-t-3xl md:rounded-l-3xl md:rounded-tr-none shadow-lg">
      
          <!-- Service Card 1 -->
          <div class=" bg-white p-6 rounded-xl hover:bg-red-500 hover:text-white transition-all shadow-md">
            <h3 class="text-xl font-bold mb-2">Web Development</h3>
            <p class="text-sm">
              High-performance websites tailored to your business needs.
            </p>
          </div>
      
          <!-- Service Card 2 -->
          <div class=" bg-white p-6 rounded-xl hover:bg-red-500 hover:text-white transition-all shadow-md">
            <h3 class="text-xl font-bold mb-2">Graphic Design</h3>
            <p class="text-sm">
              Eye-catching visuals, logos, and brand identity creation.
            </p>
          </div>
      
          <!-- Service Card 3 -->
          <div class="bg-white p-6 rounded-xl hover:bg-red-500 hover:text-white transition-all shadow-md">
            <h3 class="text-xl font-bold mb-2">Digital Consulting</h3>
            <p class="text-sm">
              Guidance and strategy to boost your online presence.
            </p>
          </div>
      
        </div>
      
        <!-- Right Side - Product Style Banner -->
        <div class="bg-red-500 text-white p-10 md:w-1/2 flex flex-col justify-center rounded-b-3xl md:rounded-r-3xl md:rounded-bl-none shadow-lg">
          <div class="text-center space-y-6">
            <h2 class="text-4xl font-bold">Our Premium Services</h2>
            <p class="text-lg">
              Discover solutions designed for growth, efficiency, and success.
            </p>
            <a href="/contact" class="inline-block px-8 py-3 border-2 border-white rounded-full hover:bg-white hover:text-red-500 font-bold transition-all">
              Get Started
            </a>
          </div>
        </div>
      
      </section>

    <section id="services" class="bg-gray-800 flex flex-col-reverse md:flex-row items-center justify-center px-4 md:px-20 py-10 gap-8 ">
        <!-- Text -->
        <div class="md:w-1/2 text-center md:text-left">
          <h2 class="text-4xl font-bold text-white mb-4">Our Services</h2>
          <p class="text-lg text-gray-200 leading-relaxed">
            We provide modern digital solutions tailored to your needs. From web development to UX/UI design, our team is ready to help you turn your ideas into reality.
          </p>
        </div>
      
        <!-- Image -->
        <div class="relative flex justify-center md:justify-start">
            <!-- Image 1 -->
            <img src="../image1.webp" alt="Team member 1" class="w-32 h-32 md:w-40 md:h-40 rounded-full border-6 border-gray-800 shadow-lg relative z-30"/>
          
            <!-- Image 2 -->
            <img
              src="../image2.webp"
              alt="Team member 2"
              class="w-32 h-32 md:w-40 md:h-40 rounded-full border-6 border-gray-800 shadow-lg -ml-10 md:-ml-14 relative z-20"
            />
          
            <!-- Image 3 -->
            <img
              src="../image3.webp"
              alt="Team member 3"
              class="w-32 h-32 md:w-40 md:h-40 rounded-full border-6 border-gray-800 shadow-lg -ml-10 md:-ml-14 relative z-10"
            />
          </div>
      </section>
</Layout>